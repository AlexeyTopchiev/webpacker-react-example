<p id="notice"><%= notice %></p>

<p>
  <strong>Content:</strong>
  <%= @todo.content %>
</p>

<p>
  <strong>Due date:</strong>
  <%= @todo.due_date %>
</p>

<p>
  <strong>Done:</strong>
  <% if @todo.done %>
    <img class="check" src="<%= asset_pack_path 'check-square-o.svg' %>" />
  <% else %>
    <img class="check" src="<%= asset_pack_path 'square-o.svg' %>" />
  <% end %>
</p>

<%= link_to 'Edit', edit_todo_path(@todo), class: 'btn btn-default' %> |
<%= link_to 'Back', todos_path, class: 'btn btn-default' %>
